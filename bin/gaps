#!/usr/bin/env node

var package = require('../package.json');
var path = require('path');
var program = require('commander');

var lib = path.join(__dirname, '../lib');

program
    .version(package.version);

// program
//     .command('pull')
//     .description('Pull code from google drive.')
//     .action(require(lib + '/pull'));

program
    .command('list')
    .description('List the fileids of all your script files.')
    .action(require(lib + '/list'));

// program
//     .command('deploy')
//     .description('Deploy code to google drive.')
//     .action(require(lib + '/deploy'));

program
    .command('clone <fileId>')
    .description('Clone a script file with a give fileid (see gaps list).')
    .action(require(lib + '/clone'));

program
    .command('auth')
    .option('-f, --force', 'Force reauthentication')
    .description('Authenticate Drive API.')
    .action(require(lib + '/auth'));

// program
//     .command('create')
//     .description('Create a folder in Drive')
//     .action(require(lib + '/createFolder'));

program
    .parse(process.argv);

if (program.args.length < 1) {
    program.outputHelp();
    process.exit(2);
}
